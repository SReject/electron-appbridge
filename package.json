{
    "name": "electron-appbridge",
    "version": "0.0.1",
    "license": "ISC",
    "scripts": {
        "lint": "eslint .",
        "build": "node build.mjs",
        "format:check": "prettier --check .",
        "format": "prettier --write .",
        "declarations": "tsc --emitDeclarationOnly"
    },
    "type": "module",
    "exports": {
        ".": {
            "types": "./main.d.ts",
            "import": "./main.mjs",
            "require": "./main.js",
            "default": "./main.js"
        },
        "./main": {
            "types": "./main.d.ts",
            "import": "./main.mjs",
            "require": "./main.js",
            "default": "./main.js"
        },
        "./bridge": {
            "types": "./bridge.d.ts",
            "import": "./bridge.mjs",
            "require": "./bridge.js",
            "default": "./bridge.js"
        },
        "./renderer": {
            "types": "./renderer.d.ts",
            "import": "./renderer.mjs",
            "require": "./renderer.js",
            "default": "./renderer.js"
        },
        "./preload": {
            "types": "./preload.d.ts",
            "import": "./preload.mjs",
            "require": "./preload.js",
            "default": "./reload.js"
        }
    },
    "devDependencies": {
        "@types/node": "^18.14.2",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "esbuild": "^0.17.11",
        "eslint": "^8.35.0",
        "eslint-config-prettier": "^8.7.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.8.4",
        "typescript": "^4.9.5",
        "vite-plugin-static-copy": "^0.13.1"
    },
    "peerDependencies": {
        "electron": ">=12.0.0"
    },
    "engines": {
        "node": ">=14.16.0"
    },
    "volta": {
        "node": "18.14.2"
    },
    "homepage": "https://github.com/SReject/electron-appbridge",
    "repository": "github:SReject/electron-appbridge",
    "bugs": {
        "url": "https://github.com/SReject/electron-appbridge/issues"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true
    }
}
