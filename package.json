{
    "private": true,
    "scripts": {
        "build": "tsc && vite build --sourcemap=true && vite build --config=renderer.vite.config.js"
    },
    "files": ["./dist/**/*"],
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./renderer": {
            "import": "./dist/renderer.mjs",
            "require": "./dist/renderer.js"
        },
        "./main-process": {
            "import": "./dist/main-process.mjs",
            "require": "./dist/main-process.js"
        },
        "./preload": {
            "import": "./dist/preload.mjs",
            "require": "./dist/preload.js"
        }
    },
    "devDependencies": {
        "@types/node": "^18.14.2",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "eslint": "^8.35.0",
        "eslint-config-prettier": "^8.7.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.8.4",
        "typescript": "^4.9.5",
        "vite": "^4.1.4"
    },
    "peerDependencies": {
        "electron": ">=12.0.0"
    },
    "engines": {
        "node": ">=14.16.0"
    },
    "volta": {
        "node": "18.14.2"
    }
}
